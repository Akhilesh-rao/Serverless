        "/products": {
            "get": {
                "summary": "Get products",
                "tags": [
                    "Serverless Task"
                ],
                "parameters": [
                    {
                        "name": "Keyword",
                        "in": "query",
                        "description": "Keyword for searching",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "Electronics"
                    },
                    {
                        "name": "Category",
                        "in": "query",
                        "description": "Category for filtering",
                        "schema": {
                            "type": "string"
                        },
                        "example": "Laptops"
                    },
                    {
                        "name": "MinPrice",
                        "in": "query",
                        "description": "Minimum price for filtering",
                        "schema": {
                            "type": "number"
                        },
                        "example": 100
                    },
                    {
                        "name": "MaxPrice",
                        "in": "query",
                        "description": "Maximum price for filtering",
                        "schema": {
                            "type": "number"
                        },
                        "example": 1000
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "ProductID": {
                                                "type": "string"
                                            },
                                            "Subcategory": {
                                                "type": "string"
                                            },
                                            "Price": {
                                                "type": "number"
                                            },
                                            "Category": {
                                                "type": "string"
                                            },
                                            "Keywords": {
                                                "type": "string"
                                            }
                                        },
                                        "example": [
                                            {
                                                "ProductID": "P104",
                                                "Subcategory": "Gaming Laptops",
                                                "Price": 59999.0,
                                                "Category": "Laptops",
                                                "Keywords": "Electronics"
                                            },
                                            {
                                                "ProductID": "P103",
                                                "Subcategory": "Mobile",
                                                "Price": 10989.56,
                                                "Category": "Smartphone",
