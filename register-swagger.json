                    "Serverless Task"
                ],
                "summary": "Register a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "Name": {
                                        "type": "string"
                                    },
                                    "ID": {
                                        "type": "string"
                                    },
                                    "Email": {
                                        "type": "string"
                                    },
                                    "Password": {
                                        "type": "string"
                                    },
                                    "ShippingAddress": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "Name",
                                    "ID",
                                    "Email",
                                    "Password",
                                    "ShippingAddress"
                                ],
                                "example": {
                                    "Name": "John Doe",
                                    "ID": "12345",
                                    "Email": "john@example.com",
                                    "Password": "securepassword",
                                    "ShippingAddress": "123 Main St"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User registered successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "message": "User registered successfully"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User registration failed",
